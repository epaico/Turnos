@model Turnos.Models.Especialidad

<h3>Esta Seguro de eliminar el siguiente registro ?</h3>
<div class="row">
    <div class="col s12 m6">
        <div class="card">
            <div class="card-content">
                <div class="card-title">
                    <span><b>Especialidad</b></span>
                </div>
                @Html.DisplayFor(model => model.Description)
            </div>
            <div class="card-action">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="IdEspecialidad" />
                    <input type="submit" value="Eliminar" class="btn red"/>
                    <a asp-action="Index" class="right">Volver</a>
                </form>
            </div>
        </div>
    </div>
</div>
