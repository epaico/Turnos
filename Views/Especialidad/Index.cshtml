@model IEnumerable<Turnos.Models.Especialidad>

<p>
    <a asp-action="Create">Nuevo</a>
</p>

<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdEspecialidad">Editar</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.IdEspecialidad">Eliminar</a>
                </td>
            </tr>
        }


    </tbody>
</table>
