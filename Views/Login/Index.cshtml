@model Turnos.Models.Login

@{
    Layout = null;
}
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<!--Import materialize.css-->
<link type="text/css" rel="stylesheet" href="~/css/materialize.min.css" media="screen,projection" />
<script type="text/javascript" src="~/js/materialize.min.js"></script>

<div class="container">
    <h4>Login</h4>
    <hr />
    <br />
    <div class="row">
        <form class="col s12" asp-action="Login">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix">person_pin</i>
                    <input asp-for="Usuario" type="text">
                    <label asp-for="Usuario">Usuario</label>
                    <span asp-validation-for="Usuario"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix">vpn_key</i>
                    <input asp-for="Password" type="password">
                    <label asp-for="Password">Password</label>
                    <span asp-validation-for="Password"></span>
                </div>
            </div>
            <span class="red-text">@ViewBag.errorLogin</span>
            <div class="row">
                <div class="col s6 m6">
                    <button type="submit" class="waves-effect waves-light btn"><i class="material-icons left">save</i>Login</button>
                </div>
            </div>
        </form>
    </div>
</div>