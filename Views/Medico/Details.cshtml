@model Turnos.Models.Medico

<div>
    <h4>Medico</h4>
    <hr />
    <div class="row">
        <div class="col s12 m6">
            <div class="card hoverable grey lighten-5">
                <div class="card-content">
                    <span class="card-title"><b>@Html.DisplayFor(model => model.Nombre), @Html.DisplayFor(model => model.Apellido)</b></span>
                    <dl class="row">
                        <dt>
                            @Html.DisplayNameFor(model => model.Direccion) : @Html.DisplayFor(model => model.Direccion)
                        </dt>
                        <hr />
                        <dt>
                            @Html.DisplayNameFor(model => model.Telefono) : @Html.DisplayFor(model => model.Telefono)
                        </dt>
                        <hr />
                        <dt>
                            @Html.DisplayNameFor(model => model.Email) : @Html.DisplayFor(model => model.Email)
                        </dt>
                        <hr />
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.HorarioAtencionDesde) : @Html.DisplayFor(model => model.HorarioAtencionDesde)
                        </dt>
                        <hr />
                        <dt>
                            @Html.DisplayNameFor(model => model.HorarioAtencionHasta) : @Html.DisplayFor(model => model.HorarioAtencionHasta)
                        </dt>
                    </dl>
                </div>
                <div class="card-action grey lighten-5">
                    <form>
                        <input type="hidden" asp-for="IdMedico" />
                        <a class="btn waves-effect red darken-3" asp-action="Edit" asp-route-id="@Model.IdMedico">
                            Editar
                            <i class="material-icons left">edit</i>
                        </a>
                        <a class="waves-effect waves-light btn grey darken-4 right" asp-action="Index" class="right">
                            Volver
                            <i class="material-icons left">keyboard_return</i>
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

