@model Turnos.Models.Paciente

<h4>Paciente</h4>

<div class="row">
    <div class="col s12 m6">
        <div class="card hoverable">
            <div class="card-content">
                <span class="card-title">@Html.DisplayFor(modelo => modelo.Nombre), @Html.DisplayFor(modelo => modelo.Apellido)</span>
                <dl class="row">
                    <dt>@Html.DisplayNameFor(modelo => modelo.Direccion) : @Html.DisplayFor(modelo => modelo.Direccion)</dt>
                    <dt>@Html.DisplayNameFor(modelo => modelo.Telefono) : @Html.DisplayFor(modelo => modelo.Telefono)</dt>
                    <dt>@Html.DisplayNameFor(modelo => modelo.Email) : @Html.DisplayFor(modelo => modelo.Email)</dt>
                </dl>

            </div>
            <div class="card-action">
                <a asp-action="Edit" asp-route-id="@Model.IdPaciente" class="btn green">Editar</a>
                <a asp-action="Index" class="right">Volver</a>
            </div>
        </div>
    </div>
</div>
